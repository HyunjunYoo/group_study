<body>
    <script>
        function filterHighScorers(students) {
            const highScorers = students.filter(student => student.score >= 80);

            highScorers.forEach(student => {
                console.log(`${student.name}: ${student.score}점`);
            });
        }

        const students = [
           { name: "홍길동", score: 74 },
           { name: "손흥민", score: 98 },
           { name: "이강인", score: 81 },
           { name: "황희찬", score: 65 }
        ]

    filterHighScorers(students);
        
    </script>
    
</body>
</html>
